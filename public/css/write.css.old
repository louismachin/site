@font-face {
    font-family: 'Gramercy';
    src: url('/fonts/GramercyVariable.woff2') format('woff2');
}

body {
    margin: 16px;
}

body * {
    font-family: 'Gramercy', serif;
}

.inline-fields {
    display: flex;
    gap: 1em;
    align-items: center;
    margin-bottom: 1em;
}

.toggle {
    position: relative;
    display: inline-block;
    width: 32px;
    height: 16px;
}

.toggle input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: 0.2s;
    border-radius: 20px;
}

.slider:before {
    position: absolute;
    content: "";
    height: 8px;
    width: 8px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.2s;
    border-radius: 50%;
}

.toggle input:checked + .slider {
    background-color: #4caf50;
}

.toggle input:checked + .slider:before {
    transform: translateX(16px);
}

textarea {
    width: calc(100vw - 44px);
    height: calc(100vh - 88px);
    margin: 0;
    padding: 4px;
}

#postForm {
    height: calc(100vh - 32px);
}