<!DOCTYPE html>
<html>

<%= erb :_head, locals: { copy: @copy } %>

<body>
    <div id="horz">
        <%= erb :_nav %>
        <div id="main">
            <form action="/api/upload_picture" method="POST" enctype="multipart/form-data">
                <input type="file" name="file" accept="image/*" required>
                <br><br>
                <input type="text" name="id" placeholder="ID" required>
                <br><br>
                <input type="text" name="title" placeholder="Title">
                <br><br>
                <label>Public: <input type="checkbox" name="public" value="true"></label>
                <br><br>
                <button type="submit">Upload</button>
            </form>
        </div>
    </div>
</body>

</html>