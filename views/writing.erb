<!DOCTYPE html>
<html>

<%= erb :_head, locals: { copy: @copy } %>

<body>
    <div id="horz">
        <%= erb :_nav %>
        <div id="main">
            <%= erb :_toolbox, locals: { links: { "Edit" => "/write/#{@document.id}", }} %>
            <% unless @document.is_encoded? %>
                <%= erb :_markdown, locals: { content: render_markdown(@document.file_path) } %>
            <% else %>
                <%= erb :_cipher, locals: { document: document, title: 'This is asdasda work in progress.' } %>
            <% end %>
        </div>
    </div>
</body>

</html>
